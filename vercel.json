{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "zeroConfig": true, "outputDirectory": "dist" } }
  ],
  "build": {
    "env": {
      "NODE_VERSION": "20"
    }
  },
  "routes": [
    { "src": "/sw.js", "headers": { "cache-control": "public, max-age=0, must-revalidate" }, "dest": "/sw.js" },
    { "src": "/manifest.json", "dest": "/manifest.json" },
    { "src": "/icons/(.*)", "dest": "/icons/$1" },
    { "src": "/screenshots/(.*)", "dest": "/screenshots/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}


